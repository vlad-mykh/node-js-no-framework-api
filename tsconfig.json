{
	"compileOnSave": true,
	"compilerOptions": {
		"experimentalDecorators": true,
		"lib": [
			"es2017"
		],
		"target": "ES2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "build",
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"files": [
		"src/server.ts"
	],
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		".vs",
		"package-lock.json",
		"node_modules"
	]
}